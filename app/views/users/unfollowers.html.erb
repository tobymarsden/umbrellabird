<div class="container">

  <% if flash[:error] %>
  <div class="row">
    <div class="alert alert-danger col-sm-8 col-sm-offset-1" role="alert"><strong>Argh!</strong> <%= flash[:error] %></div>
  </div>
  <% end %>

  <div class="user-list">
    <%= render partial: "user", collection: @users, locals: {actions: [:unfollow]} %>
  </div>

  <% if @users.size == 100 %>

    <div class="load-more">
      <button class="load-more-btn btn btn-lg">Show me MORE!!!1</button>
    </div>

  <% end %>


</div>